<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:padding="15dp">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"

        app:layout_constraintBottom_toTopOf="@+id/textViewSurName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gregoire"
        app:layout_constraintStart_toEndOf="@+id/textViewSurName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSurName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LastName: "
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewSurNameField"
        app:layout_constraintStart_toStartOf="@+id/textViewName" />

    <TextView
        android:id="@+id/textViewSurNameField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Barret"
        app:layout_constraintEnd_toEndOf="@+id/textViewNameField"
        app:layout_constraintStart_toStartOf="@+id/textViewNameField"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameField" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Hello"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textViewSurName"
        app:layout_constraintTop_toBottomOf="@+id/textViewSurName" />



    <Button
        android:id="@+id/button"
        android:layout_margin="5dp"
        android:paddingRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewNameField"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_name" />

</androidx.constraintlayout.widget.ConstraintLayout>